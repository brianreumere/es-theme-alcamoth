<theme>

    <formatVersion>4</formatVersion>
    <include>./../theme.xml</include>

    <view name="system">
        <text name="systemYear" extra="true">
            <text></text>
        </text>
        <text name="systemDescription" extra="true">
            <text></text>
         </text>
    </view>

    <view name="detailed">
        <image name="md_thumbnail">
            <pos>1 1</pos>
        </image>
        <text name="md_lbl_releasedate, md_lbl_publisher, md_lbl_developer, md_lbl_rating, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
            <pos>1 1</pos>
        </text>
        <text name="md_publisher, md_developer, md_genre, md_players, md_playcount">
            <pos>1 1</pos>
        </text>
        <datetime name="md_releasedate, md_lastplayed">
            <pos>1 1</pos>
        </datetime>
        <rating name="md_rating">
            <pos>1 1</pos>
        </rating>
    </view>

    <view name="basic"></view>
    <view name="video"></view>

</theme>
