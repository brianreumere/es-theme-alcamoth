    <formatVersion>4</formatVersion>
    <include>./../theme.xml</include>

    <view name="system">
        <image name="systemHeader" extra="true">
            <path>./header.svg</path>
        </image>
        <text name="systemYear" extra="true">
            <text>1990</text>
        </text>
        <text name="systemDescription" extra="true">
            <text>8-BIT HANDHELD CONSOLE</text>
