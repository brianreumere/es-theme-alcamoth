<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed, video">
        <image name="background_color" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>000000</color>
        </image>
        <helpsystem name="help">
            <textColor>F8F8F2</textColor>
            <iconColor>F8F8F2</iconColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
    </view>

    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>231C2ACC</color>
            <size>1 0.3</size>
            <logoScale>1.9</logoScale>
            <logoSize>0.15625 0.097222222222222</logoSize>
         </carousel>
    </view>

    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>

</theme>
