<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed, video">
        <image name="background_color" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>202020</color>
        </image>
        <helpsystem name="help">
            <textColor>F8F8F2BB</textColor>
            <iconColor>F8F8F2</iconColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
    </view>

    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 0.2325</size>
            <color>00000000</color>
            <logoSize>1 .225</logoSize>
            <logoScale>1</logoScale>
         </carousel>
         <text name="system_description" extra="true">
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2DD</color>
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.038</fontSize>
         </text>
         <text name="systemInfo">
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2BB</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.026</fontSize>
         </text>
    </view>

    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>

</theme>
