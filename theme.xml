<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed, video">
        <image name="background" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>202020</color>
        </image>
        <helpsystem name="help">
            <textColor>F8F8F2CC</textColor>
            <iconColor>F8F8F2</iconColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
    </view>

    <view name="system">
        <image name="systemHeader" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.16</pos>
            <maxSize>0.4 0.12</maxSize>
        </image>
        <text name="systemDescription" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.26</pos>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2DD</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.038</fontSize>
        </text>
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 0.26</size>
            <color>00000000</color>
            <logoSize>1 0.24</logoSize>
            <logoScale>1</logoScale>
         </carousel>
         <text name="systemInfo">
            <origin>0.5 0</origin>
            <pos>0.5 0.65</pos>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.028</fontSize>
         </text>
    </view>

    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>

</theme>
