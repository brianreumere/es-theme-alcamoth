            <fontPath>./_inc/fonts/Nunito-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
        <image name="helpBackground" extra="true">
            <path>./_inc/images/background.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.07</size>
            <color>666666</color>
        </image>
        <image name="helpShadow" extra="true">
            <path>./_inc/images/shadow.png</path>
            <origin>0 1</origin>
            <pos>0 0.93</pos>
            <size>1 0.06</size>
