<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed, video">
        <image name="background" extra="true">
            <path>./_inc/images/micro_carbon.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <!-- <color>141411</color> -->
            <tile>true</tile>
        </image>
        <helpsystem name="help">
            <textColor>F8F8F2</textColor>
            <iconColor>F8F8F2</iconColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
        <image name="helpBackground" extra="true">
            <path>./_inc/images/background.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.07</size>
            <color>88888844</color>
        </image>
    </view>

    <view name="system">
        <image name="systemLogo" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.1666666667</pos>
            <maxSize>0.75 0.09259259259</maxSize>
            <path>./_inc/images/logos/${system.theme}.svg</path>
        </image>
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 0.48</size>
            <color>40404000</color>
            <logoSize>0.38 0.38</logoSize>
            <logoScale>1</logoScale>
        </carousel>
        <image name="logo">
            <path>./_inc/images/controllers/${system.theme}.png</path>
        </image>
        <text name="systemYear" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.78</pos>
            <size>0.75 0.04</size>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.036</fontSize>
            <alignment>center</alignment>
        </text>
        <text name="systemDescription" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.73</pos>
            <size>0.75 0.04</size>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.036</fontSize>
            <alignment>center</alignment>
        </text>
        <text name="systemInfo">
            <origin>0.5 0</origin>
            <pos>0.5 0.83</pos>
            <size>0.75 0.04</size>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.036</fontSize>
            <alignment>center</alignment>
        </text>
    </view>

    <view name="basic">
        <image name="logo">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.09</pos>
            <maxSize>0.4 0.16</maxSize>
            <path>./_inc/images/logos/${system.theme}.svg</path>
        </image>
        <textlist name="gamelist">
            <pos>0.05 0.2</pos>
            <size>0.9 0.71</size>
            <selectorColor>F8F8F2</selectorColor>
            <selectedColor>000000</selectedColor>
            <primaryColor>F8F8F2</primaryColor>
            <secondaryColor>F8F8F2</secondaryColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </textlist>
    </view>

    <view name="detailed">
        <!-- Left column -->
        <!-- Left column background color -->
        <image name="leftBackground" extra="true">
            <path>./_inc/images/background.png</path>
            <pos>0 0</pos>
            <size>0.3 0.93</size>
            <color>99999944</color>
        </image>
        <!-- Console/platform logo -->
        <image name="logo">
            <origin>0.5 0.5</origin>
            <pos>0.15 0.06</pos>
            <maxSize>0.26 0.06</maxSize>
            <path>./_inc/images/logos/${system.theme}.svg</path>
        </image>
        <!-- Game list -->
        <textlist name="gamelist">
            <pos>0 0.1</pos>
            <size>0.3 0.81</size>
            <selectorColor>F8F8F2</selectorColor>
            <selectedColor>000000</selectedColor>
            <primaryColor>F8F8F2</primaryColor>
            <secondaryColor>F8F8F2</secondaryColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <horizontalMargin>0.02</horizontalMargin>
        </textlist>
        <!-- Middle column -->
        <!-- Screenshot or video -->
        <image name="md_image">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.29</pos>
            <maxSize>0.4 0.5</maxSize>
        </image>
        <!-- Game description -->
        <text name="md_description">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.735</pos>
            <size>0.36 0.31</size>
            <color>FFFFFF</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.024</fontSize>
        </text>
        <!-- Right column -->
        <!-- Right column background color -->
        <image name="rightBackground" extra="true">
            <path>./_inc/images/background.png</path>
            <origin>1 0</origin>
            <pos>1 0</pos>
            <size>0.3 0.93</size>
            <color>99999944</color>
        </image>
        <!-- Game box art -->
        <image name="md_thumbnail">
            <origin>0.5 0.5</origin>
            <pos>0.85 0.29</pos>
            <maxSize>0.2 0.4</maxSize>
        </image>
        <image name="boxArtBackground" extra="true">
            <path>./_inc/images/background.png</path>
            <origin>0.5 0.5</origin>
            <pos>0.85 0.25</pos>
            <size>0.3 0.5</size>
            <color>1C1C17CC</color>
        </image>
        <text name="md_lbl_releasedate, md_lbl_publisher, md_lbl_developer, md_lbl_rating, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
            <color>F8F8F2</color>
            <forceUppercase>1</forceUppercase>
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.024</fontSize>
        </text>
    </view>

    <view name="video"></view>

</theme>
