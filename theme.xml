<theme>

    <formatVersion>4</formatVersion>

    <view name="system, basic, detailed, video">
        <image name="background" extra="true">
            <path>./_inc/images/bg_color.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <color>141411</color>
        </image>
        <helpsystem name="help">
            <textColor>F8F8F2AA</textColor>
            <iconColor>F8F8F2</iconColor>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.03</fontSize>
        </helpsystem>
    </view>

    <view name="system">
        <image name="systemHeader" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.021875</pos>
            <maxSize>0.75 0.2</maxSize>
        </image>
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 0.5</size>
            <color>404040CC</color>
            <logoSize>0.38 0.38</logoSize>
            <logoScale>1</logoScale>
        </carousel>
        <text name="systemDescription" extra="true">
            <origin>0.5 0</origin>
            <pos>0.5 0.7592592593</pos>
            <size>0.75 0.05</size>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.036</fontSize>
            <alignment>center</alignment>
        </text>
        <text name="systemInfo">
            <origin>0.5 0</origin>
            <pos>0.5 0.833333333</pos>
            <size>0.75 0.05</size>
            <backgroundColor>00000000</backgroundColor>
            <color>F8F8F2CC</color>
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.036</fontSize>
            <alignment>center</alignment>
        </text>
    </view>

    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>

</theme>
